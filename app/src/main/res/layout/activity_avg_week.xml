<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.barnbuilders.nicholaslargen.mycommute.AvgWeek"
    android:background="@drawable/backgrounddash">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Day"
        android:id="@+id/button4"
        android:clickable="true"
        android:onClick="AvgDay"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Week"
        android:id="@+id/button8"
        android:clickable="false"
        android:onClick="avgWeek"
        android:layout_below="@+id/avgweeklyspeed"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginTop="62dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVG MONTH"
        android:id="@+id/button12"
        android:clickable="true"
        android:onClick="AvgMonth"
        android:layout_alignTop="@+id/button8"
        android:layout_alignRight="@+id/avgweeklytime"
        android:layout_alignEnd="@+id/avgweeklytime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Year"
        android:id="@+id/button16"
        android:clickable="true"
        android:onClick="AvgYear"
        android:layout_below="@+id/avgweeklyspeed"
        android:layout_toRightOf="@+id/avgweeklytime"
        android:layout_toEndOf="@+id/avgweeklytime"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Week"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Goes here"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avg Weekly Time Driven:"
        android:id="@+id/avgweeklytime"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avg Weekly Mileage Driven:"
        android:id="@+id/avgweeklymileage"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/avgweeklytime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avg Weekly Speed:"
        android:id="@+id/avgweeklyspeed"
        android:layout_below="@+id/avgweeklymileage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

</RelativeLayout>
